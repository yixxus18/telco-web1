---

import heroImage1 from "assets/telecomunicaciones.jpg";

import heroImage4 from "assets/Camaras.jpg"; // Asegúrate de tener más imágenes

import antena from "assets/ant.jpg";

import servidor from "assets/servidor.jpg";

import redes from "/public/red.jpg";

import fondito2 from "assets/CCTV.jpg";

---

  <div>

    <div class="carousel-container "> <!-- Ajusta el ancho según tus necesidades -->

      <div class="carousel-slide"> 

        <img src={heroImage1.src} alt="Redes Telco" />
        
        <div style="position: absolute; top: 15%; left: 35%; transform: translate(-50%, -50%); " class="text-white font-bold text-3xl">Instalacion y mantenimiento de redes</div>

      </div>

      <div class="carousel-slide">

        <img src={antena.src} alt="Cableado Estructurado Telco" />

      </div>

      <div class="carousel-slide">

        <img src={redes.src} alt="Telecomunicaciones Telco"  />

      </div>

      <div class="carousel-slide">

        <img src={heroImage4.src} alt="Sistemas de seguridad Telco"  />

      </div>

      <div class="carousel-slide">

        <img src={servidor.src} alt="Telco Networks"  />

      </div>

      <div class="carousel-slide">

        <img src={fondito2.src} alt="Telefonia Digital"  />

      </div>

    </div>

    <!-- Botones de navegación -->
    <button class="carousel-button-prev">
      <svg class="w-6 h-6 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m15 19-7-7 7-7"/>
      </svg>
    </button>
    <button class="carousel-button-next">
      <svg class="w-6 h-6 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m9 5 7 7-7 7"/>
      </svg>
    </button>

    <br>
    <h1 class="text-center text-3xl font-bold">Soluciones y Servicios</h1>

  </div>



  <style>
    .carousel-container {
      position: relative;
      width: 100%;
      max-width: 100%; /* Ajusta el ancho máximo según tus necesidades */
      height: auto; /* Ajusta la altura automáticamente según el contenido */
      overflow: hidden;
    }
  
    .carousel-slide {
      position: relative;
      background-attachment: fixed;
      background-size: cover;
      background-position: center;
      height: 75vh;
      margin-left: 0;
      margin-right: 0;
      display: none; /* Oculta todas las imágenes por defecto */
    }
  
    .carousel-slide.active {
      display: block; /* Muestra solo la imagen activa */
    }
  
    .carousel-slide img {
      width: 100%; /* Asegura que la imagen ocupe todo el ancho del contenedor */
      height: 100%; /* Ajusta la altura para que ocupe todo el contenedor */
      object-fit: cover; /* Asegura que la imagen cubra el espacio sin distorsionarse */
    }
  
    .carousel-button-prev, .carousel-button-next {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background-color: rgba(0, 0, 0, 0.4);
      color: white;
      border: none;
      padding: 10px;
      cursor: pointer;
      z-index: 10;
    }
  
    .carousel-button-prev {
      left: 0px;
    }
  
    .carousel-button-next {
      right: 0px;
    }
  
    .title-container {
      display: inline-block;
    }
  
    .title {
      transition: text-shadow 0.3s ease;
    }
  
    .title div:hover {
      text-shadow: 2px 2px 8px #4ad6bb;
    }

    .image-description {
    position: absolute;
    bottom: 10px;
    left: 10px;
    color: white;
    background-color: rgba(0, 0, 0, 0.7);
    padding: 5px;
    font-size: 14px;
  }

    
  </style>



<script>

  let currentSlide = 0;

  const slides = document.querySelectorAll('.carousel-slide');

  const totalSlides = slides.length;



  function showNextSlide() {

    if (slides[currentSlide]) {

      slides[currentSlide].classList.remove('active');

      currentSlide = (currentSlide + 1) % totalSlides;

      if (slides[currentSlide]) {

        slides[currentSlide].classList.add('active');

      }

    }

  }



  document.querySelectorAll('.carousel-button-next').forEach(button => {

    button.addEventListener('click', showNextSlide);

  });



  document.querySelectorAll('.carousel-button-prev').forEach(button => {

    button.addEventListener('click', () => {

      if (slides[currentSlide]) {

        slides[currentSlide].classList.remove('active');

        currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;

        if (slides[currentSlide]) {

          slides[currentSlide].classList.add('active');

        }

      }

    });

  });



  // Initialize the first slide as active

  slides[currentSlide].classList.add('active');



  // Set interval to change slide every 3 seconds

  setInterval(showNextSlide, 3500);

</script>